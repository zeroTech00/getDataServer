<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_below="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="id"
       android:layout_marginBottom="10dp"/>

   <TextView
       android:id="@+id/data_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="0"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Data Sensor 1"
       android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/dataSensor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Sensor 2"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/dataSensor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Sensor 3"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/dataSensor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Sensor 4"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/dataSensor4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show Data"
        android:layout_marginBottom="400dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="coba"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>